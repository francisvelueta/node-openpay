<%- layout('layouts/main.ejs') %>

<form class="d-flex justify-content-center mt-5" action="/signup" method="POST">
  <fieldset class="col-lg-5 border border-dark d-flex justify-content-center">
     <legend class="d-flex justify-content-center">Registro</legend>
    <div class="d-flex justify-content-center form-group">
    <input type="text" class="form-control" name="name" placeholder="Nombre">
    </div>
    <div class="d-flex justify-content-center form-group">
    <input type="text" class="form-control" name="last_name" placeholder="Apellidos">
    </div>
    <div class="d-flex justify-content-center form-group">
    <input type="email" class="form-control"  name= "email" aria-describedby="emailHelp" placeholder="Email">
    </div>
    <div class="d-flex justify-content-center form-group">
    <input type="phone" class="form-control" name="phone_number" placeholder="Telefono">
    </div>
      <button type="submit" class="d-flex justify-content-center mb-2 ml-1 btn btn-primary" >Registrarse</button>
     <fieldset>
</form>
